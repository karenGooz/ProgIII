<div>
    <a class="btn btn-primary" href="@Url.Action("Index", "PosterMVC")"><i class="glyphicon glyphicon-menu-left"></i> Regresar al Listado</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}